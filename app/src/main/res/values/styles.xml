<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Usado em layouts da aplicação. -->
    <style name="ActivityTheme" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorBackground</item>
    </style>

    <!-- Título de atividades principais. -->
    <style name="MainTitle" parent="AppTheme">
        <item name="android:textSize">@dimen/mainTitleSize</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/mainTitleMargin</item>
    </style>

    <style name="InputText" parent="AppTheme">
        <item name="android:textSize">@dimen/mediumTextSize</item>
        <item name="android:textColorHint">@color/textColorLighter</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/defaultMargin</item>
    </style>

    <style name="EditorButton" parent="AppTheme">
        <item name="android:layout_margin">@dimen/btn_margin</item>
        <item name="android:textSize">@dimen/btnTxt</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_height</item>
    </style>

    <style name="MainButton" parent="AppTheme">
        <item name="android:layout_margin">@dimen/btn_margin_higher</item>
        <item name="android:textSize">@dimen/btnTxtLarge</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/zero</item>
    </style>

    <style name="Title" parent="AppTheme">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/titleSize</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="Checkbox" parent="AppTheme">
        <item name="android:layout_marginBottom">@dimen/spacing</item>
        <item name="android:textColor">@color/textColorLighter</item>
        <item name="android:textSize">@dimen/mediumTextSize</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ManageBtn" parent="AppTheme">
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/textColorLighter</item>
        <item name="android:layout_margin">@dimen/btn_margin_higher</item>
        <item name="android:background">@color/darkRed</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/zero</item>
    </style>

    <style name="ItemImage" parent="AppTheme">
        <item name="android:layout_marginRight">@dimen/imgMargin</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_width">@dimen/img</item>
        <item name="android:layout_height">@dimen/img</item>
    </style>

    <style name="ItemText" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditorEditText" parent="AppTheme">
        <item name="android:textColor">@color/textColorLighter</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
